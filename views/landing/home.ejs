<% layout('layouts/landing')-%>

<div class="landing-container">
    <div class="brand-logo">
        <i class="fa-regular fa-compass"></i>
    </div>
    
    <h1 class="main-title">
        Unlock Adventure.<br>
        Discover Unique Stays.<br>
        <span class="highlight">Live Inspired.</span>
    </h1>
    
    <p class="subtitle">
        Find extraordinary places to stay around the world. From cozy apartments to luxury villas, your perfect getaway awaits.
    </p>
    
    <div class="action-buttons">
        <a href="/listings" class="action-btn btn-primary-custom">
            <i class="fas fa-search me-2"></i>Explore Stays
        </a>
        <% if(!currUser) { %>
        <a href="/signup" class="action-btn btn-outline-custom">
            <i class="fas fa-user-plus me-2"></i>Join Roamaura
        </a>
        <% } else { %>
        <a href="/listings/new" class="action-btn btn-outline-custom">
            <i class="fas fa-plus me-2"></i>Become a Host
        </a>
        <% } %>
    </div>
    
    <div class="features-grid">
        <div class="feature-item">
            <div class="feature-icon">
                <i class="fas fa-globe-americas"></i>
            </div>
            <div class="feature-title">Global Listings</div>
            <div class="feature-desc">Browse unique properties worldwide</div>
        </div>
        <div class="feature-item">
            <div class="feature-icon">
                <i class="fas fa-shield-alt"></i>
            </div>
            <div class="feature-title">Secure & Safe</div>
            <div class="feature-desc">Trusted authentication & payments</div>
        </div>
        <div class="feature-item">
            <div class="feature-icon">
                <i class="fas fa-bolt"></i>
            </div>
            <div class="feature-title">Fast Experience</div>
            <div class="feature-desc">Lightning-fast search & booking</div>
        </div>
    </div>
    
    <div class="quick-links">
        <% if(!currUser) { %>
        <a href="/login" class="quick-link">Already have an account? Sign In</a>
        <% } else { %>
        <a href="/listings" class="quick-link">View All Listings</a>
        <a href="/listings/new" class="quick-link">Add New Listing</a>
        <a href="/logout" class="quick-link">Sign Out</a>
        <% } %>
    </div>
</div>