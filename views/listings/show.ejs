<% layout('layouts/boilerplate') -%>

<!-- Listing Detail Page -->
<div class="container-lg py-4 show-page">
  
  <!-- Header Section -->
  <header class="mb-4">
    <h1 class="display-5 fw-bold text-dark"><%= listing.title %></h1>
    <p class="text-muted mb-0">
      <i class="fas fa-map-marker-alt me-2"></i>
      <%= listing.location %>, <%= listing.country %>
    </p>
  </header>

  <!-- Main Content -->
  <div class="row g-4">
    
    <!-- Left Column - Image and Details -->
    <div class="col-lg-8">
      
      <!-- Hero Image -->
      <div class="card border-0 shadow-sm mb-4">
        <img src="<%= listing.image.url %>" 
             class="card-img-top rounded" 
             alt="<%= listing.title %>"
             style="height: 400px; object-fit: cover;">
      </div>

      <!-- Listing Details -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
          <div class="row">
            <div class="col-md-8">
              <h5 class="card-title mb-3">About this place</h5>
              <p class="card-text text-muted mb-3"><%= listing.description %></p>
              
              <!-- Categories -->
              <% if (listing.categories && listing.categories.length > 0) { %>
                <div class="mb-3">
                  <h6 class="text-muted mb-2">Categories</h6>
                  <% listing.categories.forEach(category => { %>
                    <span class="badge bg-light text-dark me-2 mb-1"><%= category %></span>
                  <% }) %>
                </div>
              <% } %>
              
              <div class="d-flex align-items-center text-muted">
                <i class="fas fa-user-circle me-2"></i>
                <span>Hosted by <strong><%= listing.owner.username %></strong></span>
              </div>
            </div>
            
            <!-- Price Card -->
            <div class="col-md-4">
              <div class="card border shadow-sm">
                <div class="card-body text-center">
                  <h3 class="text-primary mb-1">â‚¬<%= listing.price.toLocaleString("de-DE") %></h3>
                  <p class="text-muted small mb-0">per night</p>
                  <small class="text-muted">+7% tax</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Owner Actions -->
      <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-body">
            <h6 class="card-title">Manage your listing</h6>
            <div class="d-flex gap-2">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Edit Listing
              </a>
              <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
                <button type="submit" class="btn btn-outline-danger" 
                        onclick="return confirm('Are you sure you want to delete this listing?')">
                  <i class="fas fa-trash me-2"></i>Delete Listing
                </button>
              </form>
            </div>
          </div>
        </div>
      <% } %>

    </div>

    <!-- Right Column - Map -->
    <div class="col-lg-4">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Where you'll be</h5>
          <div id="map" style="height: 300px; border-radius: 8px;"></div>
          <p class="text-muted small mt-2 mb-0">
            <i class="fas fa-map-marker-alt me-1"></i>
            <%= listing.location %>, <%= listing.country %>
          </p>
        </div>
      </div>
    </div>

  </div>

  <!-- Reviews Section -->
  <section class="mt-5">
    
    <!-- Add Review Form -->
    <% if (currUser) { %>
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
          <h5 class="card-title mb-3">Leave a Review</h5>
          <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
            
            <div class="mb-3">
              <label for="rating" class="form-label">Rating</label>
              <fieldset class="starability-heart">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>
            
            <div class="mb-3">
              <label for="comment" class="form-label">Your Review</label>
              <textarea name="review[comment]" id="comment" rows="4" class="form-control" 
                        placeholder="Share your experience..." required></textarea>
              <div class="invalid-feedback">Please write a review comment.</div>
            </div>
            
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-paper-plane me-2"></i>Submit Review
            </button>
          </form>
        </div>
      </div>
    <% } %>

    <!-- Display Reviews -->
    <% if (listing.reviews.length > 0) { %>
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-4">
            Reviews (<%= listing.reviews.length %>)
          </h5>
          
          <div class="row g-3">
            <% listing.reviews.forEach(review => { %>
              <div class="col-md-6">
                <div class="card h-100 border review-card">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                      <div class="d-flex align-items-center">
                        <i class="fas fa-user-circle text-muted me-2 fs-4"></i>
                        <h6 class="mb-0"><%= review.author.username %></h6>
                      </div>
                      <% if (currUser && (currUser._id.equals(review.author._id) || currUser._id.equals(listing.owner._id))) { %>
                        <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="d-inline">
                          <button type="submit" class="btn btn-sm btn-outline-danger" 
                                  onclick="return confirm('Delete this review?')">
                            <i class="fas fa-trash"></i>
                          </button>
                        </form>
                      <% } %>
                    </div>
                    
                    <div class="starability-result mb-2" data-rating="<%= review.rating %>"></div>
                    <p class="card-text text-muted mb-0"><%= review.comment %></p>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="text-center py-5">
        <i class="fas fa-comments text-muted mb-3" style="font-size: 3rem;"></i>
        <h5 class="text-muted">No reviews yet</h5>
        <p class="text-muted">Be the first to leave a review!</p>
      </div>
    <% } %>

  </section>

</div>

